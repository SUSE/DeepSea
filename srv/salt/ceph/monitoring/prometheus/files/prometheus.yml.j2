          {%- endif %}
          {%- if label_list is defined %}
        - source_labels: {{ label_list }}
          regex: "{{ label.regex }}"
            {%- if label.get('target_label') %}
          target_label: "{{ label.target_label }}"
            {%- endif %}
            {%- if label.get('replacement') %}
          replacement: "{{ label.replacement }}"
            {%- endif %}
          {%- endif %}
        {%- endfor %}
      {%- endif %}
