      - files: [ '/etc/prometheus/SUSE/scrape_configs/grafana/*.yml' ]
    scheme: https
{% if not pillar.get('monitoring:grafana:ssl_cert', False) and not pillar.get('monitoring:grafana:ssl_key', False) %}
